<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="10dp"
    android:background="?android:attr/selectableItemBackground"

    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMapDealImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:transitionName="dealImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tvMapDealTitle"
            android:transitionName="dealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivMapDealImage"
            android:layout_marginRight="10dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tvDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp"
            android:layout_alignTop="@+id/tvDistance"
            android:layout_toLeftOf="@+id/tvDistance"
            android:layout_toStartOf="@+id/tvDistance" />

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp"
            android:textAlignment="viewEnd"
            android:gravity="right"
            android:paddingRight="10dp"
            android:layout_below="@+id/tvPrice"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="3sp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tvSoldMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp"
            android:layout_alignLeft="@+id/tvMapDealTitle"
            android:layout_alignStart="@+id/tvMapDealTitle"
            android:layout_alignBottom="@+id/tvPrice" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#2dac46"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:layout_below="@+id/tvMapDealTitle"
            android:layout_alignRight="@+id/tvDistance"
            android:layout_alignEnd="@+id/tvDistance" />

        <TextView
            android:id="@+id/tvOptionPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10sp"
            android:layout_alignBottom="@+id/tvPrice"
            android:layout_toLeftOf="@+id/tvPrice"
            android:layout_toStartOf="@+id/tvPrice" />

        <ImageView
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:id="@+id/imageView"
            android:src="@drawable/yelp"
            android:layout_below="@+id/tvSoldMessage"
            android:layout_alignLeft="@+id/tvSoldMessage"
            android:layout_alignStart="@+id/tvSoldMessage" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:rating="3"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:numStars="5"
            android:stepSize="1"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:progressTint="#d1c634" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
