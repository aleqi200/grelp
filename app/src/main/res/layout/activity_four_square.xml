<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    tools:context="com.grelp.grelp.activities.FourSquareActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/ivFourSquare"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="14sp"
        android:textColor="@color/primary_light"
        android:id="@+id/tvRatingCount"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/solid_green_border"
        android:layout_below="@+id/ivFourSquare"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvFourSquareRatings"
        android:layout_below="@+id/tvRatingCount"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvFourSquareTips"
        android:layout_below="@+id/tvFourSquareRatings"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
