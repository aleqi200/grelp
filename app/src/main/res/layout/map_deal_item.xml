<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentStart="true"
    android:padding="4dp"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/icons"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivMapDealImage"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_groupon_round_logo" />

        <TextView
            android:id="@+id/tvMapDealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivMapDealImage"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivMapDealImage"
            android:layout_toRightOf="@+id/ivMapDealImage"
            android:text="Deal Title" />

        <TextView
            android:id="@+id/tvMapDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivMapDealImage"
            android:layout_toEndOf="@+id/ivMapDealImage"
            android:layout_toRightOf="@+id/ivMapDealImage"
            android:text="New Text" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
