<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ivYelpProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="14sp"
        android:id="@+id/tvYelpUserName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivYelpProfile"
        android:layout_toEndOf="@+id/ivYelpProfile"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="10sp"
        android:id="@+id/tvReviewTimestamp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:layout_alignBottom="@+id/tvYelpUserName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvReviewText"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/ivYelpProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:id="@+id/ivRating"
        android:layout_below="@+id/tvYelpUserName"
        android:layout_alignLeft="@+id/tvYelpUserName"
        android:layout_alignStart="@+id/tvYelpUserName" />
</RelativeLayout>